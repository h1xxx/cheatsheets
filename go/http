headers
=======

# set a header in a request
req, err := http.NewRequest("GET", "https://am.i.mullvad.net/json", nil)
req.Header.Set("User-Agent", "Golang_Spider_Bot/3.0")



auth
====

# use basic authentication
client := &http.Client{}
req, err := http.NewRequest("GET", "example.com", nil)
req.SetBasicAuth("user1", "pass123")
resp, err := client.Do(req)
if err != nil {
	log.Fatal(err)
}
bodyText, err := ioutil.ReadAll(resp.Body)
s := string(bodyText)
package main



requests
========

# make a post request
userpost := url.Values{}
userpost.Set("username", "user1")
client := &http.Client{}
req, err := http.NewRequest("POST", "example.com",
	strings.NewReader(userpost.Encode()))
req.SetBasicAuth("user1", "pass123")
req.Header.Set("Content-Type",
	"application/x-www-form-urlencoded; param=value")
resp, err := client.Do(req)
bodyText, err := ioutil.ReadAll(resp.Body)
s := string(bodyText)
scanner := bufio.NewScanner(strings.NewReader(s))

get a url parameter from the request
param1 := r.URL.Query().Get("param1")



url
===

# decode magnet link url
u, err := url.Parse(magnet)
if err != nil {
	return "", fmt.Errorf("invalid magnet URI: %v", err)
}
if u.Scheme != "magnet" {
	return "", fmt.Errorf("not a magnet link")
}
values := u.Query()
xt := values.Get("xt")
if xt == "" {
	return "", fmt.Errorf("missing xt parameter")
}
if !strings.HasPrefix(xt, "urn:btih:") {
	return "", fmt.Errorf("invalid xt parameter format")
}

# replace infohash in magnet link url
func rebuildMagnet(u *url.URL, values url.Values, newHash string) string {
        values.Set("xt", "urn:btih:"+newHash)
        u.RawQuery = values.Encode()
        return u.String()
}

