data.location=$HOME/.task
news.version=2.6.0
verbose=0
column.padding=2
editor=vim

# project settings
urgency.project.coefficient=0
default.project=main

# alias definitions
alias.cal=calendar
alias.pr=projects

# colors
include dark-16.theme
color.due=white
color.due.today=green
color.recurring=white

# default report - 'next'
report.next.columns=id,project,tags,due,description,urgency
report.next.labels=ID,Project,Tag,Due,Description,Urg
report.next.dateformat=Y-M-D H:N

# report - 'list'/ calendar task list
report.list.columns=id,project,tags,due,description.count,urgency
report.list.labels=ID,Project,Tags,Due,Description,Urg
report.list.dateformat=Y-M-D H:N
report.list.context=0

# calendar
weekstart=Monday
calendar.details=full
calendar.legend=0

# calendar holidays
#include $HOME/.task/holidays.rc
calendar.holidays=sparse

